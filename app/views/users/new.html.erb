<h1>Signup</h1>

<div class="well">
  <table class="table table-bordered">
    <%= form_for :user, url: '/users' do |f| %>
      <tr><td>First Name:</td><td><%= f.text_field :first_name %></td></tr>
      <tr><td>Last Name:</td><td><%= f.text_field :last_name %></td></tr>
      <tr><td>Email:</td><td><%= f.text_field :email %></td></tr>
      <tr><td>Phone Number:</td><td><%= f.text_field :phone_number %></td></tr>
      <tr><td>Password:</td><td><%= f.text_field :password %></td></tr>
      <tr><td>Password Confirmation:</td><td><%= f.text_field :password_confirmation %></td></tr>
  </table>
  <%= f.submit "Submit" %>
  <% end %>
</div>
