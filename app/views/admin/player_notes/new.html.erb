<h2>Update Notes</h1>

<div class="well note_container">
  <%= form_for :notes, url: '/admin/player_notes', class:'form-horizontal' do |f| %>
    <div class="form-group form-control">  
      <label for="inputEmail3" class="col-sm-2 control-label">Player:</label>
      <div class="col-sm-10">
        <%= collection_select(:notes, :player_id, Player.all, :id, :player_name) %> 
      </div>
    </div>

    <div class="form-group form-control player-note-box">
      <label for="inputEmail3" class="col-sm-2 control-label">Player Note:</label>
      <div class="col-sm-8">
         <%= f.text_area :note_preview, class: "form-control", rows: "3" %>
      </div>
    </div> 

     <div class="form-group">
        <%= f.hidden_field :note_date, value: DateTime.now.to_s %>
      </div>

     <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit "Update" %> 
      </div>
    </div>   
  <% end %>
</div>
